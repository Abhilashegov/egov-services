def group = "${env.GROUP}"
def env = "${env.JOB_BASE_NAME}".split("-")
def source_env = env[1]
def dest_env = env[3]

try {
    node("slave"){
        checkout scm
        def env_snapshot = load("jenkins/env_snapshot.groovy")
        def archiver = load("jenkins/archiver.groovy")

	    env_snapshot.takeSnapshot(group, source_env)

        archiver.archiveArtifacts(["jenkins/scripts/image_tags.txt"])
    }
} catch (e) {
    throw e
}
