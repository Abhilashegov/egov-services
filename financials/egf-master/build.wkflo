def build(path, ci_image) {
    stage("Build"){
        docker.image("${ci_image}").inside {
            sh "cd ${path}; mvn clean package deploy -s settings.xml -Dnexus.user=${env.NEXUS_USER} -Dnexus.password=${env.NEXUS_PASSWORD} -Dmaven.test.failure.ignore=true ";
        }
    }
 }

 return this;