<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.egov.pgr</groupId>
    <artifactId>pgr-rest</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>PGR Rest project</name>
    <description>PGR Rest project for eGov services</description>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>1.5.2.RELEASE</version>
        <relativePath/> <!-- lookup parent from persistence -->
    </parent>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <java.version>1.8</java.version>
        <commons-lang-version>2.6</commons-lang-version>
        <joda-time-version>2.9.6</joda-time-version>
    </properties>

    <dependencies>

        <dependency>
            <groupId>org.egov.services</groupId>
            <artifactId>pgr-common</artifactId>
            <version>0.19.0</version>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
        </dependency>

        <dependency>
            <groupId>org.elasticsearch.client</groupId>
            <artifactId>transport</artifactId>
            <version>5.4.0</version>
        </dependency>

        <dependency>
            <groupId>org.elasticsearch</groupId>
            <artifactId>elasticsearch</artifactId>
            <version>5.4.0</version>
        </dependency>

        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-to-slf4j</artifactId>
            <version>2.8.2</version>
        </dependency>

        <dependency>
            <groupId>org.postgresql</groupId>
            <artifactId>postgresql</artifactId>
            <version>9.4.1212</version>
        </dependency>

        <dependency>
            <groupId>org.flywaydb</groupId>
            <artifactId>flyway-core</artifactId>
            <version>4.1.0</version>
        </dependency>

        <dependency>
            <groupId>joda-time</groupId>
            <artifactId>joda-time</artifactId>
            <version>${joda-time-version}</version>
        </dependency>

        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-jpamodelgen</artifactId>
            <version>5.2.6.Final</version>
            <optional>true</optional>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <repositories>
        <repository>
            <id>repo.egovernments.org</id>
            <name>eGov ERP Releases Repository</name>
            <url>http://repo.egovernments.org/nexus/content/repositories/releases/</url>
        </repository>
    </repositories>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-pmd-plugin</artifactId>
                <version>3.7</version>
                <configuration>
                    <linkXRef>false</linkXRef>
                    <skipEmptyReport>false</skipEmptyReport>
                </configuration>
                <executions>
                    <execution>
                        <phase>verify</phase>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.7.9</version>
                <executions>
                    <execution>
                        <id>default-prepare-agent</id>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>default-report</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>report</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>default-check</id>
                        <goals>
                            <goal>check</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <rule>
                                    <element>CLASS</element>
                                    <excludes>
                                        <exclude>org.egov.pgrrest.common.persistence.entity.*</exclude>
                                        <exclude>org.egov.pgrrest.common.domain.model.AuthenticatedUser</exclude>
                                        <exclude>org.egov.pgrrest.common.domain.model.AttributeEntry</exclude>
                                        <exclude>org.egov.pgrrest.common.domain.model.AttributeDefinition</exclude>
                                        <exclude>org.egov.pgrrest.common.domain.model.ServiceDefinition</exclude>
                                        <exclude>org.egov.pgrrest.common.domain.model.ValueDefinition</exclude>
                                        <exclude>org.egov.pgrrest.common.domain.model.Requester</exclude>
                                        <exclude>org.egov.pgrrest.read.web.contract.*</exclude>
                                        <exclude>org.egov.pgrrest.read.domain.exception.InvalidOtpRequestException</exclude>
                                        <exclude>org.egov.pgrrest.read.domain.exception.OtpValidationNotCompleteException</exclude>
                                        <exclude>org.egov.pgrrest.read.domain.exception.InvalidServiceTypeCodeException</exclude>
                                        <exclude>org.egov.pgrrest.read.domain.exception.InvalidAttributeEntryException</exclude>
                                        <exclude>org.egov.pgrrest.read.domain.exception.InvalidServiceRequestException</exclude>
                                        <exclude>org.egov.pgrrest.PgrRestSpringBootApplication</exclude>
                                        <exclude>org.egov.pgrrest.read.persistence.entity.*</exclude>
                                        <exclude>org.egov.pgrrest.common.contract.*</exclude>
                                        <exclude>org.egov.pgrrest.read.web.controller.*</exclude>
                                        <exclude>org.egov.pgrrest.read.domain.service.*</exclude>
                                        <exclude>org.egov.pgrrest.read.domain.model.*</exclude>
                                        <exclude>org.egov.pgrrest.write.consumer.contracts.*</exclude>
                                        <exclude>org.egov.pgrrest.write.persistence.repository.ServiceRequestWriteRepository</exclude>
                                        <exclude>org.egov.pgrrest.read.web.resolver.AuthenticatedUserResolver</exclude>
                                        <exclude>org.egov.pgrrest.read.persistence.repository.SubmissionRepository</exclude>
                                        <exclude>org.egov.pgrrest.read.web.adapters.error.InvalidOtpValidationRequestExceptionAdapter</exclude>
                                        <exclude>org.egov.pgrrest.read.web.adapters.error.OtpValidationNotCompleteExceptionAdapter</exclude>
                                        <exclude>org.egov.pgrrest.read.web.adapters.error.InvalidServiceTypeSearchExceptionAdapter</exclude>
                                        <exclude>org.egov.pgrrest.read.web.adapters.error.InvalidServiceTypeExceptionAdapter</exclude>
                                        <exclude>org.egov.pgrrest.read.persistence.repository.ServiceRequestRepository</exclude>
                                        <exclude>org.egov.pgrrest.read.persistence.repository.QueryFactory</exclude>
                                        <exclude>org.egov.pgrrest.read.persistence.repository.ServiceRequestESRepository</exclude>
                                        <exclude>org.egov.pgrrest.read.domain.exception.UnauthorizedAccessException
                                        </exclude>
                                        <exclude>org.egov.pgrrest.read.web.interceptor.CorrelationIdAwareRestTemplate
                                        </exclude>
                                        <exclude>org.egov.pgrrest.read.persistence.repository.ServiceRequestTypeRepository
                                        </exclude>
                                        <exclude>org.egov.pgrrest.common.persistence.repository.UserRepository</exclude>
                                        <exclude>org.egov.pgrrest.read.web.controller.FooController</exclude>
                                        <exclude>org.egov.pgrrest.common.domain.model.Role</exclude>
                                        <exclude>org.egov.pgrrest.common.domain.model.Role.RoleBuilder</exclude>
                                        <exclude>org.egov.pgrrest.write.consumer.HashMapDeserializer</exclude>
                                        <exclude>org.egov.pgrrest.common.domain.model.ReceivingMode</exclude>
                                        <exclude>org.egov.pgrrest.common.domain.model.ReceivingCenter</exclude>
                                        <exclude>org.egov.pgrrest.write.domain.model.ServiceRequestRecord</exclude>
                                        <exclude>org.egov.pgrrest.read.persistence.repository.ServiceDefinitionRepository</exclude>
                                    </excludes>
                                    <limits>
                                        <limit>
                                            <counter>LINE</counter>
                                            <value>COVEREDRATIO</value>
                                            <minimum>0.90</minimum>
                                        </limit>
                                    </limits>
                                </rule>

                            </rules>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>