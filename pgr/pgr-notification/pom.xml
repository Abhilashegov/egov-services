<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.egov</groupId>
	<artifactId>pgr-notification</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>pgr-notification</name>
	<description>PGR notification service</description>

	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>1.5.2.RELEASE</version>
		<relativePath/>
	</parent>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<java.version>1.8</java.version>
	</properties>

	<dependencies>

        <dependency>
            <groupId>org.egov.services</groupId>
            <artifactId>services-common</artifactId>
            <version>0.8.0</version>
        </dependency>

		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>

		<dependency>
			<groupId>org.projectlombok</groupId>
			<artifactId>lombok</artifactId>
			<optional>true</optional>
		</dependency>

		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-lang3</artifactId>
			<version>3.0</version>
		</dependency>

		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>2.6</version>
		</dependency>

        <dependency>
            <groupId>org.springframework.kafka</groupId>
            <artifactId>spring-kafka</artifactId>
            <version>1.1.2.RELEASE</version>
        </dependency>

        <dependency>
            <groupId>org.trimou</groupId>
            <artifactId>trimou-core</artifactId>
            <version>2.1.0.Final</version>
        </dependency>

        <dependency>
            <groupId>org.egov.services</groupId>
            <artifactId>tracer</artifactId>
            <version>0.14.0</version>
        </dependency>

        <dependency>
            <groupId>org.egov.services</groupId>
            <artifactId>pgr-common</artifactId>
            <version>0.12.0</version>
        </dependency>

        <!--Test dependencies-->

        <dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>

    <repositories>
        <repository>
            <id>repo.egovernments.org</id>
            <name>eGov ERP Releases Repository</name>
            <url>http://repo.egovernments.org/nexus/content/repositories/releases/</url>
        </repository>
    </repositories>

    <build>
		<plugins>

            <plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-pmd-plugin</artifactId>
                <version>3.7</version>
                <configuration>
                    <linkXRef>false</linkXRef>
                    <skipEmptyReport>false</skipEmptyReport>
                </configuration>
                <executions>
                    <execution>
                        <phase>verify</phase>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.7.9</version>
                <executions>
                    <execution>
                        <id>default-prepare-agent</id>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>default-report</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>report</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>default-check</id>
                        <goals>
                            <goal>check</goal>
                        </goals>
                        <configuration>
                            <rules>

                                <rule>
                                    <element>CLASS</element>
                                    <excludes>
                                        <exclude>org.egov.PgrNotificationApplication</exclude>
                                        <exclude>org.egov.domain.model.SevaRequest</exclude>
                                        <exclude>org.egov.domain.model.Tenant</exclude>
                                        <exclude>org.egov.domain.model.NotificationContext</exclude>
                                        <exclude>org.egov.domain.exception.TenantDoesNotExistException</exclude>
                                        <exclude>org.egov.domain.service.SMSMessageStrategy</exclude>
                                        <exclude>org.egov.domain.service.ComplaintCitizenSMSMessageStrategy</exclude>
                                        <exclude>org.egov.domain.service.UndefinedSMSMessageStrategy</exclude>
                                        <exclude>org.egov.domain.service.UndefinedEmailMessageStrategy</exclude>
                                        <exclude>org.egov.domain.service.NewDeliverableCitizenSMSMessageStrategy</exclude>
                                        <exclude>org.egov.domain.service.UpdateDeliverableStatusCitizenSMSMessageStrategy</exclude>
                                        <exclude>org.egov.domain.service.ProcessingFeeEnteredCitizenSMSMessageStrategy</exclude>
                                        <exclude>org.egov.domain.service.EmailMessageStrategy</exclude>
                                        <exclude>org.egov.domain.service.NewDeliverableEmailMessageStrategy</exclude>
                                        <exclude>org.egov.domain.service.UpdateDeliverableStatusEmailMessageStrategy</exclude>
                                        <exclude>org.egov.domain.service.ProcessingFeeEnteredEmailMessageStrategy</exclude>
                                        <exclude>org.egov.domain.service.ComplaintEmailMessageStrategy</exclude>
                                        <exclude>org.egov.domain.service.NotificationService</exclude>
                                        <exclude>org.egov.consumer.HashMapDeserializer</exclude>
                                        <exclude>org.egov.persistence.dto.*</exclude>
                                    </excludes>
                                    <limits>
                                        <limit>
                                            <counter>LINE</counter>
                                            <value>COVEREDRATIO</value>
                                            <minimum>0.90</minimum>
                                        </limit>
                                    </limits>
                                </rule>

                            </rules>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

		</plugins>
	</build>

</project>
