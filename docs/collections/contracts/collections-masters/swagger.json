                    {
                        "$ref": "#/parameters/sort"
                    },
                    {
                        "name": "id",
                        "in": "query",
                        "description": "List of Unique Id of Business Category",
                        "required": false,
                        "type": "array",
                        "items": {
                            "type": "integer"
                        },
                        "format": "int64"
